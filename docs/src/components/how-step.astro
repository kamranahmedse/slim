---
const props = Astro.props;
const { number } = props;
---

<div class="flex items-baseline gap-3 py-2.5 border-b border-[#f5f5f5] last:border-b-0">
  <span class="font-mono text-[11px] font-semibold text-text-tertiary bg-[#f5f5f5] size-5 rounded-full inline-flex items-center justify-center shrink-0 relative top-0.5">
    {number}
  </span>
  <div>
    <slot />
  </div>
</div>
